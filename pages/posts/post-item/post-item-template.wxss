.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #efefef;
  border-top: 1rpx solid #ededed;
  padding-bottom: 5rpx;
}

.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-title{
  font-size:34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin: 0 16rpx 2rpx 0;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  padding-top: 12rpx; 
  padding-bottom: 5rpx;
  letter-spacing: 2rpx; 
}
.post-like{
  font-size:13rpx;
  display: flex;
  flex-direction: row; 
  line-height: 50rpx;
  margin-left:10rpx; 
 }
.post-like-image{
  height: 50rpx;
  width: 50rpx;
  margin: 0 20rpx 5rpx 8rpx;
}  
  .post-like-font{
  font-size: 30rpx;
  height: 50rpx;
  margin-right: 8rpx; 
}    