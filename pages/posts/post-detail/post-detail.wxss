.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 750rpx;
  height: 460rpx;
}
.audio{
  width: 102rpx;
  height: 90rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
.author-date{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left:20rpx; 
}
.date{
  font-size: 24rpx;
  margin-left:30rpx;
  vertical-align: middle;
  color: #999; 
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c; 
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right:40rpx;
  vertical-align: middle; 
}
.share-img{
  margin-left: 30rpx;
}
.circle-img image{
  width: 60rpx;
  height: 60rpx;
}
/* .circle-img:nth-child(1){
  width: 70rpx;
  height: 60rpx;
} */
.horizon{
  width: 660rpx;
  height: 1px;
  position: relative;
  background-color: #e5e5e5;
  vertical-align: center;
  top: 30rpx;
  margin: 0 auto;
  z-index: -99;
}
.detail{
  color: #666;
  margin: 20rpx 30rpx auto 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
